{
    "name": "lukecurtis93/avro-generate",
    "description": "Easily create Avro files from your PHP classes.",
    "keywords": [
        "lukecurtis93",
        "avro-generate"
    ],
    "homepage": "https://github.com/lukecurtis93/avro-generate",
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Curtis",
            "email": "lukesimoncurtis@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/annotations": "^1.14",
        "flix-tech/avro-serde-php": "^1.6",
        "illuminate/contracts": "^9",
        "league/flysystem": "^3.0",
        "symfony/console": "^5.4|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28",
        "orchestra/testbench": "^7.0.0",
        "league/flysystem-memory": "^3.0"

    },
    "autoload": {
        "psr-4": {
            "LukeCurtis\\AvroGenerate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LukeCurtis\\AvroGenerate\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "bin": [
        "bin/avro"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
